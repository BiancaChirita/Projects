<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrivateInformation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE INFORMATION"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/grey_border_bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrivateInformation">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_username"
                android:layout_centerVertical="true"
                android:id="@+id/ic_username"
                android:paddingTop="20dp"
                android:layout_alignParentTop="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_username"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_username"
                android:inputType="textNoSuggestions"
                android:hint="Username"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alert"
                android:layout_below="@id/ic_username"
                android:paddingTop="20dp"
                android:id="@+id/ic_password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_username"
                android:layout_toRightOf="@id/ic_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/edit_password"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alert"
                android:layout_below="@id/ic_password"
                android:paddingTop="20dp"
                android:id="@+id/ic_confirm_password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_password"
                android:layout_toRightOf="@id/ic_confirm_password"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:id="@+id/edit_confirm_password"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
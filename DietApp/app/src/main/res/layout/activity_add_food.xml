<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodToolbar">

            <include layout="@layout/snippet_add_food_toptoolbar"/>

        </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
             android:layout_below="@id/addFoodToolbar">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Food Name"
                 android:textSize="20sp"
                 android:layout_marginStart="20dp"
                 android:id="@+id/tvAddFoodName"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvAddFoodName"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="10dp"
                 android:inputType="text"
                 android:id="@+id/addFoodName"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/addFoodName"
                 android:text="Grams"
                 android:textSize="20sp"
                 android:layout_marginStart="20dp"
                 android:id="@+id/tvAddGrams"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvAddGrams"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="10dp"
                 android:id="@+id/addGrams"
                 android:inputType="number"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/addGrams"
                 android:text="kCal/grams"
                 android:textSize="20sp"
                 android:layout_marginStart="20dp"
                 android:id="@+id/tvAddCalories"
                 />

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvAddCalories"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="10dp"
                 android:id="@+id/addCalories"
                 android:inputType="number"/>

         </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>